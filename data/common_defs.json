{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "./common_defs.schema.json",
    "$defs": {
    "Timeframe": {
      "enum": [
        "15m",
        "1h",
        "4h",
        "1d"
      ]
    },
    "Direction": {
      "enum": [
        "long",
        "short",
        "auto"
      ]
    },
    "Confirm": {
      "enum": [
        "none",
        "close_confirm"
      ]
    },
    "BandKind": {
      "enum": [
        "bollinger",
        "keltner",
        "donchian",
        "vwap_band"
      ]
    },
    "BandSpec": {
      "type": "object",
      "description": "Band specification for technical indicators. IMPORTANT: 'length' is in BARS, not days. Effective lookback horizon = tf × length (e.g., 720 bars × 1h ≈ 30 days, 24 bars × 1h ≈ 1 day). When user says '150 days', convert to bars based on timeframe: 150 days on 1h = 150 × 24 = 3600 bars.",
      "properties": {
        "band": {
          "$ref": "#/$defs/BandKind"
        },
        "length": {
          "type": "integer",
          "minimum": 5,
          "maximum": 400,
          "description": "Number of BARS for the lookback window (NOT days). Effective horizon = tf × length. Examples: 24 bars × 1h ≈ 1 day, 720 bars × 1h ≈ 30 days, 150 bars × 1h ≈ 6.25 days. To convert user's 'days' to bars: days × (bars_per_day for tf). For 1h: 1 day = 24 bars, 30 days = 720 bars, 150 days = 3600 bars."
        },
        "mult": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 5.0,
          "description": "Standard deviation multiplier for band width. Values >2 are rare events, >2.5 are very rare, >3 are extreme/dramatic outliers."
        }
      },
      "required": [
        "band",
        "length"
      ],
      "additionalProperties": false
    },
    "BandEvent": {
      "type": "object",
      "oneOf": [
        {
          "title": "Distance from mean via z or band-multiple",
          "properties": {
            "kind": {
              "const": "distance"
            },
            "mode": {
              "enum": [
                "z",
                "band_mult"
              ]
            },
            "side": {
              "enum": [
                "away_upper",
                "away_lower"
              ]
            },
            "thresh": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 5.0
            }
          },
          "required": [
            "kind",
            "mode",
            "side",
            "thresh"
          ],
          "additionalProperties": false
        },
        {
          "title": "Touch / cross band edge",
          "properties": {
            "kind": {
              "const": "edge_event"
            },
            "edge": {
              "enum": [
                "upper",
                "lower",
                "mid"
              ]
            },
            "op": {
              "enum": [
                "touch",
                "cross_in",
                "cross_out"
              ]
            }
          },
          "required": [
            "kind",
            "edge",
            "op"
          ],
          "additionalProperties": false
        },
        {
          "title": "Re-entry after outside",
          "properties": {
            "kind": {
              "const": "reentry"
            },
            "edge": {
              "enum": [
                "upper",
                "lower"
              ]
            }
          },
          "required": [
            "kind",
            "edge"
          ],
          "additionalProperties": false
        }
      ]
    },
    "MASpec": {
      "type": "object",
      "properties": {
        "fast": {
          "type": "integer",
          "minimum": 2,
          "maximum": 400
        },
        "slow": {
          "type": "integer",
          "minimum": 2,
          "maximum": 800
        },
        "op": {
          "enum": [
            ">",
            "<"
          ]
        }
      },
      "required": [
        "fast",
        "slow",
        "op"
      ],
      "additionalProperties": false
    },
    "BreakoutSpec": {
      "type": "object",
      "properties": {
        "lookback_bars": {
          "type": "integer",
          "minimum": 5,
          "maximum": 1000
        },
        "buffer_bps": {
          "type": "number",
          "minimum": 0,
          "maximum": 200
        },
        "confirm": {
          "$ref": "#/$defs/Confirm"
        }
      },
      "required": [
        "lookback_bars"
      ],
      "additionalProperties": false
    },
    "RetestSpec": {
      "type": "object",
      "properties": {
        "break_lookback_bars": {
          "type": "integer",
          "minimum": 5,
          "maximum": 1000
        },
        "pullback_depth_atr": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 10.0
        },
        "confirm": {
          "$ref": "#/$defs/Confirm"
        }
      },
      "required": [
        "break_lookback_bars",
        "pullback_depth_atr"
      ],
      "additionalProperties": false
    },
    "SqueezeSpec": {
      "type": "object",
      "properties": {
        "metric": {
          "enum": [
            "bb_width_pctile",
            "kc_comp"
          ]
        },
        "pctile_min": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "break_rule": {
          "enum": [
            "donchian",
            "band_edge"
          ]
        },
        "with_trend": {
          "type": "boolean"
        }
      },
      "required": [
        "metric",
        "pctile_min"
      ],
      "additionalProperties": false
    },
    "XSRankSpec": {
      "type": "object",
      "description": "Cross-sectional ranking specification for portfolio entry/exit. Ranks symbols by feature and selects top/bottom N for long/short positions.",
      "properties": {
        "universe": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "List of symbols to rank (e.g., ['BTC-USD', 'ETH-USD', 'SOL-USD'])."
        },
        "rank_feature": {
          "enum": [
            "ret_1d",
            "ret_1w",
            "hv_ratio",
            "rsi",
            "ema_slope"
          ],
          "description": "Feature to rank by: ret_1d (1-day return), ret_1w (1-week return), hv_ratio (historical volatility ratio), rsi (RSI), ema_slope (EMA slope)."
        },
        "top_n": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Number of top-ranked symbols to select for long positions. Rank is 1-based (1 = highest rank, lower = stronger)."
        },
        "bottom_n": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Number of bottom-ranked symbols to select for short positions (when side='long_short'). If omitted and side='long_short', defaults to top_n. Set to 0 or omit for long_only strategies."
        },
        "rebalance_cadence": {
          "enum": [
            "1d",
            "1w"
          ],
          "description": "How often to rebalance the portfolio: 1d (daily) or 1w (weekly)."
        },
        "weights": {
          "enum": [
            "equal",
            "rank"
          ],
          "description": "Position sizing: equal (equal weight) or rank (weight by rank, higher rank = larger position)."
        },
        "side": {
          "enum": [
            "long_only",
            "long_short"
          ],
          "description": "Position direction: long_only (only long top N) or long_short (long top N, short bottom N)."
        }
      },
      "required": [
        "universe",
        "rank_feature",
        "top_n",
        "rebalance_cadence",
        "weights",
        "side"
      ],
      "additionalProperties": false
    },
    "PairsSpec": {
      "type": "object",
      "properties": {
        "symbol_a": {
          "type": "string"
        },
        "symbol_b": {
          "type": "string"
        },
        "method": {
          "enum": [
            "price_spread",
            "log_spread"
          ]
        },
        "hedge_ratio_mode": {
          "enum": [
            "fixed_1to1",
            "ols"
          ]
        },
        "z_entry": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 5.0
        },
        "z_exit": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 5.0
        }
      },
      "required": [
        "symbol_a",
        "symbol_b",
        "method",
        "hedge_ratio_mode",
        "z_entry",
        "z_exit"
      ],
      "additionalProperties": false
    },
    "IntermarketSpec": {
      "type": "object",
      "description": "Intermarket trigger specification. Supports single leader (via leader_symbol) or multiple leaders (via leaders array with aggregation).",
      "properties": {
        "leaders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Array of leader symbols for basket-based triggers (e.g., ['BTC-USD', 'ETH-USD']). Use with leader_aggregate. Mutually exclusive with leader_symbol."
        },
        "leader_symbol": {
          "type": "string",
          "description": "Single leader symbol (backward compatibility). Mutually exclusive with leaders array."
        },
        "leader_aggregate": {
          "type": "object",
          "description": "Aggregation rule for multi-leader triggers. Required when using leaders array.",
          "properties": {
            "feature": {
              "enum": [
                "ret_pct",
                "ma_flip",
                "band_break"
              ],
              "description": "Feature to compute for each leader (same as trigger_feature for single leader)."
            },
            "op": {
              "enum": [
                "max",
                "min",
                "avg"
              ],
              "description": "Aggregation operator: max (trigger if any leader exceeds threshold), min (trigger if all leaders exceed threshold), avg (trigger if average exceeds threshold)."
            },
            "threshold": {
              "type": "number",
              "description": "Threshold for aggregated feature (same semantics as trigger_threshold for single leader)."
            }
          },
          "required": [
            "feature",
            "op",
            "threshold"
          ],
          "additionalProperties": false
        },
        "follower_symbol": {
          "type": "string",
          "description": "Symbol to trade when leader(s) trigger. Should match context.symbol for clarity (see slot_hints)."
        },
        "trigger_feature": {
          "enum": [
            "ret_pct",
            "ma_flip",
            "band_break"
          ],
          "description": "Feature to monitor on leader (for single-leader mode). Mutually exclusive with leader_aggregate."
        },
        "trigger_threshold": {
          "type": "number",
          "description": "Threshold for trigger_feature (for single-leader mode). Mutually exclusive with leader_aggregate."
        },
        "window_bars": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "description": "Lookback window in bars for trigger detection."
        },
        "entry_side_map": {
          "type": "object",
          "description": "Mapping from leader move direction to follower entry side. For multi-leader, applies to aggregated direction (positive = up, negative = down).",
          "properties": {
            "leader_up": {
              "enum": [
                "long",
                "short",
                "none"
              ],
              "description": "Follower entry when leader(s) move up (or aggregated value is positive)."
            },
            "leader_down": {
              "enum": [
                "long",
                "short",
                "none"
              ],
              "description": "Follower entry when leader(s) move down (or aggregated value is negative)."
            }
          },
          "required": [
            "leader_up",
            "leader_down"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "follower_symbol",
        "window_bars",
        "entry_side_map"
      ],
      "additionalProperties": false,
      "allOf": [
        {
          "anyOf": [
            {
              "required": [
                "leader_symbol",
                "trigger_feature",
                "trigger_threshold"
              ],
              "not": {
                "required": [
                  "leaders",
                  "leader_aggregate"
                ]
              }
            },
            {
              "required": [
                "leaders",
                "leader_aggregate"
              ],
              "not": {
                "required": [
                  "leader_symbol",
                  "trigger_feature",
                  "trigger_threshold"
                ]
              }
            }
          ]
        }
      ]
    },
    "VWAPAnchorSpec": {
      "type": "object",
      "properties": {
        "anchor": {
          "enum": [
            "ytd",
            "month_start",
            "session_open",
            "event_ts",
            "price_level"
          ]
        },
        "event_ts": {
          "type": "string",
          "format": "date-time"
        },
        "price_level": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "anchor"
      ],
      "additionalProperties": false
    },
    "EventSpec": {
      "type": "object",
      "properties": {
        "event_kind": {
          "enum": [
            "earnings",
            "macro",
            "listing",
            "upgrade_downgrade",
            "custom"
          ]
        },
        "entry_window_bars": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "strength_filter": {
          "enum": [
            "weak",
            "normal",
            "strong",
            "auto"
          ]
        }
      },
      "required": [
        "event_kind",
        "entry_window_bars",
        "strength_filter"
      ],
      "additionalProperties": false
    },
    "SessionSpec": {
      "type": "object",
      "properties": {
        "session": {
          "enum": [
            "us",
            "eu",
            "asia"
          ]
        },
        "window": {
          "type": "string",
          "pattern": "^[0-2][0-9][0-5][0-9]-[0-2][0-9][0-5][0-9]$"
        },
        "min_gap_pct": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 50.0
        },
        "mode": {
          "enum": [
            "gap_fade",
            "gap_go"
          ]
        },
        "confirm": {
          "$ref": "#/$defs/Confirm"
        }
      },
      "required": [
        "session",
        "window",
        "min_gap_pct",
        "mode"
      ],
      "additionalProperties": false
    },
    "RegimeSpec": {
      "type": "object",
      "description": "Regime detection specification for gates, overlays, and rule-based entries. Defines a condition on trend, volatility, return, gap, VWAP distance, or derived regime classifications. Supports cross-symbol regime checks via optional symbol override.",
      "properties": {
        "symbol": {
          "type": "string",
          "description": "Optional: symbol to evaluate the regime on. If omitted, uses context.symbol. Use this for cross-symbol regime checks (e.g., 'If ETH is gapping up, buy BTC' → context.symbol='BTC-USD', RegimeSpec.symbol='ETH-USD', metric='gap_pct')."
        },
        "metric": {
          "enum": [
            "trend_ma_relation",
            "trend_adx",
            "trend_regime",
            "vol_bb_width_pctile",
            "vol_atr_pct",
            "vol_regime",
            "ret_pct",
            "gap_pct",
            "dist_from_vwap_pct",
            "session_phase",
            "risk_event_prob"
          ],
          "description": "Regime metric type: trend_ma_relation (spread of fast MA - slow MA, positive = uptrend), trend_adx (Average Directional Index, >25 = strong trend), trend_regime (derived classification: 'up', 'down', 'range'), vol_bb_width_pctile (percentile rank of BB width vs lookback), vol_atr_pct (ATR as % of price), vol_regime (derived classification: 'quiet', 'normal', 'high'), ret_pct (N-bar percentage return, controlled by lookback_bars), gap_pct (percentage gap from prior close, typically used with session_phase), dist_from_vwap_pct (distance from anchored VWAP as percentage, requires vwap_anchor), session_phase (session window classification: 'open', 'close', 'overnight', requires session), risk_event_prob (probability of risk events)."
        },
        "tf": {
          "$ref": "#/$defs/Timeframe",
          "description": "Timeframe for regime metric calculation. Not required for session_phase or gap_pct (session-based)."
        },
        "op": {
          "enum": [
            ">",
            ">=",
            "<",
            "<=",
            "between",
            "==",
            "!="
          ],
          "description": "Comparison operator. Use 'between' with value and value_hi for range checks. Use '==' or '!=' for trend_regime, vol_regime, and session_phase (string comparisons)."
        },
        "value": {
          "oneOf": [
            {
              "type": "number",
              "description": "Threshold value for numeric comparisons. For 'between', this is the lower bound."
            },
            {
              "type": "string",
              "description": "String value for regime/session comparisons (e.g., 'up', 'quiet', 'open'). Used with trend_regime, vol_regime, or session_phase metrics."
            }
          ]
        },
        "value_hi": {
          "type": "number",
          "description": "Upper bound for 'between' operator (required when op='between' for numeric metrics)."
        },
        "lookback_bars": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5000,
          "description": "Lookback window in bars for percentile/metric calculation. For ret_pct, this controls the N-bar return period (e.g., lookback_bars=1 for 1-bar return, lookback_bars=24 for 24-bar return on 1h timeframe ≈ 1 day). For vol_bb_width_pctile, this is the lookback for percentile calculation."
        },
        "ma_fast": {
          "type": "integer",
          "minimum": 2,
          "maximum": 400,
          "description": "Fast moving average period (required for trend_ma_relation metric)."
        },
        "ma_slow": {
          "type": "integer",
          "minimum": 2,
          "maximum": 800,
          "description": "Slow moving average period (required for trend_ma_relation metric)."
        },
        "vwap_anchor": {
          "$ref": "#/$defs/VWAPAnchorSpec",
          "description": "VWAP anchor specification (required for dist_from_vwap_pct metric)."
        },
        "session": {
          "enum": [
            "us",
            "eu",
            "asia"
          ],
          "description": "Trading session (required for session_phase and gap_pct metrics)."
        },
        "trend_threshold": {
          "type": "number",
          "description": "Threshold for trend_regime classification. If omitted, uses default thresholds (ma_fast/ma_slow spread > 0.5% = 'up', < -0.5% = 'down', else 'range')."
        },
        "vol_threshold_low": {
          "type": "number",
          "description": "Lower threshold for vol_regime classification (percentile). If omitted, uses default thresholds (pctile < 25 = 'quiet', pctile > 75 = 'high', else 'normal')."
        },
        "vol_threshold_high": {
          "type": "number",
          "description": "Upper threshold for vol_regime classification (percentile). If omitted, uses default thresholds (pctile < 25 = 'quiet', pctile > 75 = 'high', else 'normal')."
        },
        "notes": {
          "type": "string",
          "description": "Optional notes about this regime condition."
        }
      },
      "required": [
        "metric",
        "op",
        "value"
      ],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "op": {
                "const": "between"
              }
            },
            "required": [
              "op"
            ]
          },
          "then": {
            "required": [
              "value_hi"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "metric": {
                "enum": [
                  "trend_ma_relation"
                ]
              }
            }
          },
          "then": {
            "required": [
              "ma_fast",
              "ma_slow"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "metric": {
                "enum": [
                  "dist_from_vwap_pct"
                ]
              }
            }
          },
          "then": {
            "required": [
              "vwap_anchor"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "metric": {
                "enum": [
                  "session_phase",
                  "gap_pct"
                ]
              }
            }
          },
          "then": {
            "required": [
              "session"
            ]
          }
        }
      ]
    },
    "PositionRiskSpec": {
      "type": "object",
      "description": "Shared risk parameters for take profit, stop loss, and time-based exits. Used by entry cards (optional override), exit cards (often required), and overlays. For exits that require risk settings (e.g., take_profit_stop, trailing_stop, time_stop), at least one appropriate threshold must be provided. Exit-only behavior (close/reduce/reverse) is specified in ExitActionSpec, not here.",
      "properties": {
        "tp_pct": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 100.0,
          "description": "Take profit in % from entry price (e.g., 5 = +5% move from entry price)."
        },
        "sl_pct": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 100.0,
          "description": "Stop loss in % from entry price (e.g., 2 = -2% move from entry price)."
        },
        "tp_rr": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 20.0,
          "description": "Take profit as risk-reward ratio (e.g., 2.0 = TP at 2× the stop loss distance). If sl_atr=1.5, then tp_rr=2.0 means TP at 3.0 ATR from entry."
        },
        "sl_atr": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 20.0,
          "description": "Stop loss at N × ATR from entry (ATR computed over strategy timeframe). Common values: 1.5-2.0 for normal volatility, 2.5-3.0 for wider stops."
        },
        "time_stop_bars": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5000,
          "description": "Time-based exit: close position after N bars regardless of P&L. Used by exit.time_stop when event.time_elapsed=true. Value is in BARS (not days); effective duration = tf × bars."
        }
      },
      "additionalProperties": false
    },
    "ContextSpec": {
      "type": "object",
      "properties": {
        "tf": {
          "$ref": "#/$defs/Timeframe"
        },
        "symbol": {
          "type": "string"
        }
      },
      "required": [
        "tf",
        "symbol"
      ],
      "additionalProperties": false
    },
    "EntryActionSpec": {
      "type": "object",
      "description": "Entry action specification. Defines direction and optional throttling/cooldown controls.",
      "properties": {
        "direction": {
          "$ref": "#/$defs/Direction"
        },
        "confirm": {
          "$ref": "#/$defs/Confirm",
          "default": "none"
        },
        "cooldown_bars": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000,
          "description": "Optional: minimum bars between consecutive entries (throttling). Set to 0 or omit to disable."
        },
        "max_entries_per_day": {
          "type": "integer",
          "minimum": 0,
          "maximum": 50,
          "description": "Optional: maximum number of entries per day (daily cap). Set to 0 or omit to disable."
        }
      },
      "required": [
        "direction"
      ],
      "additionalProperties": false
    },
    "ExitActionSpec": {
      "type": "object",
      "properties": {
        "mode": {
          "enum": [
            "close",
            "reduce",
            "reverse"
          ]
        },
        "size_frac": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 1.0
        },
        "confirm": {
          "$ref": "#/$defs/Confirm",
          "default": "none"
        }
      },
      "required": [
        "mode"
      ],
      "additionalProperties": false
    },
    "TimeFilterSpec": {
      "type": "object",
      "properties": {
        "days_of_week": {
          "type": "array",
          "items": {
            "enum": [
              "monday",
              "tuesday",
              "wednesday",
              "thursday",
              "friday",
              "saturday",
              "sunday"
            ]
          },
          "minItems": 1,
          "maxItems": 7
        },
        "time_window": {
          "type": "string",
          "pattern": "^[0-2][0-9][0-5][0-9]-[0-2][0-9][0-5][0-9]$",
          "description": "Time window in HHMM-HHMM format (e.g., '0930-1600' for 9:30 AM to 4:00 PM)"
        },
        "days_of_month": {
          "type": "array",
          "items": {
